<h2>Create New Figure</h2>

<!-- add content here -->
<form method="POST" action="/figures">
  <label for="name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" />

  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<% title.id %>"
      value="<% title.name %>" />
  <% end %>

  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<% landmark[name] %>"
      value="<% landmark.name %>" />
  <% end %>

  <input type="submit" name="submit" id="submit" value="Create New Figure" />
</form>
