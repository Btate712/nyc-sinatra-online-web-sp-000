<h2>Create New Figure</h2>

<form method="POST" action="/figures">
  <label for="name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name" />

  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<% title.id %>"
      value="<% title.name %>" />
  <% end %>

  <h2>Create New Title:</h2>
  <label for="title_name">Name:</label>
  <input type="text" name="title[name]" id="title_name" />

  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<% landmark.id %>"
      value="<% landmark.name %>" />
  <% end %>

  <h2>Create New Landmark:</h2>
  <label for="landmark_name">Name:</label>
  <input type="text" name="landmark[name]" id="landmark_name" />

  <label for="landmark_year_completed">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed" />

  <input type="submit" name="submit" id="submit" value="Create New Figure" />
</form>
